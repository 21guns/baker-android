<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <!-- the theme applied to the application or activity -->
    <style name="custom_actionbar" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/action_bar_style</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <!-- ActionBar styles -->
    <style name="action_bar_style" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@android:color/white</item>
        <item name="android:displayOptions"></item>
    </style>

</resources>
